<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>


    <FrameLayout
        android:id="@+id/interfaceLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="300dp"
            android:layout_marginStart="300dp" />

        <TextView
            android:id="@+id/v_position"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:text="test2"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="300dp"
            android:layout_marginStart="300dp" />

        <ImageView
            android:id="@+id/background_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background_frame"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/settingsImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/settings"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/bagImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bag"
            android:layout_marginTop="574dp"
            android:layout_marginStart="290dp" />

        <SeekBar
            android:id="@+id/zoomBar"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="290dp"
            android:max="3"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="#e8eeff"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>